<div style="text-align: end;">
  <%= link_to "Add new cocktail", new_cocktail_path, class: "btn btn-warning" %>
</div>
<div class="paidetodos mt-4">
  <% @cocktails.each do |cocktail| %>
    <%= link_to cocktail_path(cocktail), class: "text-decoration-none text-dark" do %>
      <div class="card cocktail-card">
        <div class="card-body">
          <h5 class="card-title"><%= cocktail.name %></h5>
          <input type="hidden" id="cocktails-ingredients" value="<%= cocktail.doses %>" />
          <p class="card-typed-text"></p>
          <ul class="card-text">
            <% cocktail.ingredients.each do |ingredient| %>
              <li><%= ingredient.name %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

