<div style="text-align: center;">
  <h2><%= @cocktail.name %></h2>
</div>
<div class="row">
  <div class="col-12 col-md-6 col-lg-6">
    <div>
      <div class="card display-ing">
        <div class="card-body">
          <div style="text-align: center;">
            <h4 class="card-title">Ingredients</h4>
          </div>
          <ul class="card-text">
            <% @cocktail.doses.each do |dose| %>
              <li><%= dose.ingredient.name %> <%= link_to "(Delete)", dose_path(dose),
                                              method: :delete,
                                              data: { confirm: "Are you sure?" } %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="col-12 col-md-6 col-lg-6">
    <h4>Add a dose!</h4>
    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :description %>
      <%= f.input :ingredient, collection: @ingredients %>
      <%= f.button :submit %>
    <% end %>
  </div>
</div>

